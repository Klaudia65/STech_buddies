<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Circle -->
    <item>
        <shape android:shape="ring">
            <size
                android:width="250dp"
                android:height="250dp" />
            <solid android:color="#0a1f62" />
        </shape>
    </item>

    <!-- Progress Circle -->
    <item>
        <shape android:shape="ring">
            <size
                android:width="250dp"
                android:height="250dp" />
            <gradient
                android:startColor="#0a1f62"
                android:endColor="#0a1f62"
                android:angle="0" />
        </shape>
    </item>
</layer-list>
