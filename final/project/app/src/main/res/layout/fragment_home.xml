<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile and Info Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Profile Image"
                android:background="#EEEEEE"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <!-- User Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to the home page"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fullname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name: [Full Name]"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username: [Username]"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: [Email]"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/major_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Major: [Major]"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Button to Change Profile Photo -->
        <Button
            android:id="@+id/change_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:backgroundTint="#0a1f62"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <!-- Weather Section with Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/weather"
                android:contentDescription="Weather Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/weather_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Loading weather..."

                android:textSize="16sp" />
        </LinearLayout>

        <!-- Calendar -->
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="@color/colorPrimary"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>