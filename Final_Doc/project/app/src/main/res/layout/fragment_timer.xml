<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F9FA">

    <!-- Timer Title -->
    <TextView
        android:id="@+id/timer_mode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Pomodoro Timer"
        android:textColor="#0a1f62"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Circular Timer with Progress -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center">

        <!-- Circular Progress -->
        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:progress="100"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <!-- Timer Text -->
        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="25:00"
            android:textColor="#0a1f62"
            android:textSize="48sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Presets -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/preset_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#0a1f62"
            android:text="Pomodoro"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/preset_short_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#0a1f62"
            android:text="Short Break"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/preset_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0a1f62"
            android:text="Custom"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Start, Pause, and Reset Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:backgroundTint="#28A745"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause"
            android:backgroundTint="#FFC107"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:backgroundTint="#DC3545"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Sound/Vibration Toggles and Time Inputs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/sound_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Sound" />

        <CheckBox
            android:id="@+id/vibration_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibration"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/study_time_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Study Time (mins)"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/break_time_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Break Time (mins)"
            android:inputType="number" />
    </LinearLayout>
</LinearLayout>
