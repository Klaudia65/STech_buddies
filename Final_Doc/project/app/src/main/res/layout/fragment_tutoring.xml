<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Centered Image -->
    <ImageView
        android:id="@+id/teacherImage"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:contentDescription="Teacher Icon"
        android:src="@drawable/ic_teacher2" />

    <!-- Title -->
    <TextView
        android:id="@+id/askTeacherTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ask your teacher"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Input Field for User Question -->
    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your question here"
        android:inputType="text"
        android:minHeight="48dp" />

    <!-- Send Button -->
    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask GPT"
        android:layout_gravity="end"
        android:backgroundTint="#0a1f62"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <!-- Response Display Area -->
    <TextView
        android:id="@+id/tutoringResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="#F0F0F0"
        android:text="Your response will appear here"
        android:textSize="16sp" />
</LinearLayout>
